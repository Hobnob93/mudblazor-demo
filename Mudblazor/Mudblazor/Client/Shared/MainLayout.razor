@inherits LayoutComponentBase

<MudThemeProvider Theme="CurrentTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <Sidebar Show="ShowSidebar" />

    <MudAppBar Color="Color.Inherit" Elevation="1" Fixed="false">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Edge="Edge.Start" OnClick="() => ShowSidebar = !ShowSidebar" />
        <MudAppBarSpacer />
        <MudText Typo="Typo.h5" Class="ml-3">MudBlazor Demo</MudText>
        <MudAppBarSpacer />
        <MudTooltip Text="Toggle light/dark">
            <MudIconButton Icon="@ToggleIcon" @onclick="ToggleTheme" />
        </MudTooltip>
        <MudTooltip Text="Kyle Hobdey">
            <MudAvatar Color="Color.Secondary">KH</MudAvatar>
        </MudTooltip>
    </MudAppBar>

    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>
